<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/comunityImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:background="@color/darkgray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/comunityTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/jakarta_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comunityImg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Titulo del articulo" />

    <TextView
        android:id="@+id/comunityTexto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/jakarta_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comunityImg"
        app:layout_constraintTop_toBottomOf="@+id/comunityTitle"
        tools:text="Contenido del articulo" />

    <TextView
        android:id="@+id/comunityURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/sf_regular"
        android:textColor="@color/bluelinks"
        app:layout_constraintStart_toEndOf="@+id/comunityImg"
        app:layout_constraintTop_toBottomOf="@+id/comunityTexto"
        tools:text="Saber mÃ¡s..." />

</androidx.constraintlayout.widget.ConstraintLayout>